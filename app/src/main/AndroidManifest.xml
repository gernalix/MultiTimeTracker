<!-- v3 -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Needed to show the persistent notification while tracking (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Foreground service to reduce friction while timers are running -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- API 34+: type-specific permission (targetSdk is high) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <application
        android:allowBackup="true"
        android:label="MultiTimeTracker"
        android:supportsRtl="true"
        android:theme="@style/Theme.MultiTimeTracker">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.multitimetracker.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".TrackingForegroundService"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

    </application>

</manifest>
